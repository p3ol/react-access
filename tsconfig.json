{
  "compilerOptions": {
    "paths": {
      "~tests-utils": ["./tests/utils.js"]
    },
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "bundler",
    "target": "ES5",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "**/dist/*",
    "node_modules/**/*",
  ]
}
